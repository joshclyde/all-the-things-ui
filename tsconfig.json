{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // "noUnusedLocals": true, // lint will catch this
    // "noUnusedParameters": true, // lint will catch this
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "@Components/*": ["./src/Components/*"],
      "@Design/*": ["./src/Design/*"],
      "@Design": ["./src/Design/index"],
      "@Routes": ["./src/Routes"],
      "@redux/*": ["./src/redux/*"],
      "@Redux": ["./src/redux/index"],
      "@Utils": ["./src/Utils/index"],
      "@hocs/*": ["./src/hocs/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
